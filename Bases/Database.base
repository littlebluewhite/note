filters:
  and:
    - file.inFolder("database")
    - file.ext == "md"
properties:
  file.name:
    displayName: File
  title:
    displayName: Title
  category:
    displayName: Category
  tags:
    displayName: Tags
  created:
    displayName: Created
  updated:
    displayName: Updated
  difficulty:
    displayName: Difficulty
  source:
    displayName: Source
  status:
    displayName: Status
views:
  - type: table
    name: Database
    groupBy:
      property: status
      direction: ASC
    order:
      - updated
      - title
